#! /bin/sh

options="\
User lock
Logout
Suspend
Shut down
Restart"

optionCount=$(echo "$options" | wc -l)

# Select an option with fzf
selection=$(
    echo "$options" | \
    fzf-popup 21x$((optionCount+4)) \
        --no-multi --no-input --margin 0,1,1 \
        --header '  Power Menu' \
        --header-border rounded \
)

# Trigger the right command based on the selected option
case "$selection" in
    'User Lock')
        swaylock
        ;;
    'Logout')
        swaymsg exit
        ;;
    'Suspend')
        systemctl suspend
        ;;
    'Shut down')
        systemctl poweroff
        ;;
    'Restart')
        systemctl reboot
        ;;
esac
