	username = omulh

[init]
	defaultBranch = master

[core]
    pager = /usr/share/git/diff-highlight/diff-highlight | less -FRX

[interactive]
    difffilter = /usr/share/git/diff-highlight/diff-highlight

[alias]
    a = add
    aa = add -A
    ap = add -p
    au = add -u
    c = commit --verbose
    ca = commit -a --verbose
    cm = commit --amend --verbose
    d = diff
    ds = diff --staged
    r = restore
    rp = restore -p
    rs = restore --staged
    s = status -sb -uall
    sh = show --oneline --name-status
