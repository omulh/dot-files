### SET THE COLOR SCHEME

set notification-error-bg       "#2E3440"
set notification-error-fg       "#BF616A"
set notification-warning-bg     "#2E3440"
set notification-warning-fg     "#D08770"
set notification-bg             "#2E3440"
set notification-fg             "#D8DEE9"

set completion-bg               "#2E3440"
set completion-fg               "#D8DEE9"
set completion-group-bg         "#3B4252"
set completion-group-fg         "#D8DEE9"
set completion-highlight-bg     "#88C0D0"
set completion-highlight-fg     "#3B4252"

set index-bg                    "#2E3440"
set index-fg                    "#8FBCBB"
set index-active-bg             "#8FBCBB"
set index-active-fg             "#2E3440"

set inputbar-bg                 "#2E3440"
set inputbar-fg                 "#E5E9F0"

set statusbar-bg                "#2E3440"
set statusbar-fg                "#E5E9F0"

set highlight-color             "rgba(208,135,112,0.4)"
set highlight-active-color      "rgba(191,97,106,0.4)"
set highlight-fg                "#000000"

set default-bg                  "#2E3440"
set default-fg                  "#D8DEE9"
set render-loading-bg           "#2E3440"
set render-loading-fg           "#434C5E"

set recolor-lightcolor          "#2E3440"
set recolor-darkcolor           "#ECEFF4"


### CHANGE MAPPINGS FOR COLEMAK

# Page navigation
map N navigate next
map E navigate previous
map <C-n> bisect forward
map <C-e> bisect backward
unmap J
unmap K
unmap <C-j>
unmap <C-k>

# Page scrolling
map m scroll left
map n scroll down
map e scroll up
map i scroll right
unmap h
unmap j
unmap k
unmap l

# Set a mark
map k mark_add

# Search for the next or previous result
map j search forward
map J search backward

# Toggle bars
map <C-m> toggle_inputbar
map <C-i> toggle_statusbar

# Fullscreen page navigation
map [fullscreen] N navigate next
map [fullscreen] E navigate previous
unmap [fullscreen] J
unmap [fullscreen] K

# Index navigation
map [index] m navigate_index collapse
map [index] n navigate_index down
map [index] e navigate_index up
map [index] i navigate_index expand
map [index] M navigate_index collapse-all
map [index] I navigate_index expand-all
unmap [index] h
unmap [index] j
unmap [index] k
unmap [index] l
unmap [index] H
unmap [index] L
