for_window [app_id="^nwg-displays$"] floating enable, move position center
for_window [app_id="^org.pulseaudio.pavucontrol$"] floating enable, move position center

# Float and center windows with specific app_ids and titles
for_window [app_id="^firefox$" title="^Library$"] floating enable, move position center
for_window [app_id="^kitty$" title="^bottom$"] floating enable, move position center
for_window [app_id="^kitty$" title="^nmtui$"] floating enable, move position center
for_window [app_id="^kitty$" title="^bluetuith$"] floating enable, move position center
for_window [app_id="^kitty$" title="^peaclock$"] floating enable, move position center
for_window [app_id="^kitty$" title="^calcurse$"] floating enable, move position center

# Float, reposition and insert in scratchpad some specific windows
for_window [app_id="^kitty$" title="^calc$"] floating enable, move position 75ppt 5ppt, \
                                             move to scratchpad, scratchpad show
for_window [app_id="^kitty-temp$"] floating enable, move position 55ppt 5 ppt, \
                                   move to scratchpad, scratchpad show

# Change the used layout for windows with specific app_ids and titles
for_window [app_id="^anki$" title="- Anki$"] layout tabbed

