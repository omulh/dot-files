# git aliases
alias ga='git add'
alias gc='git commit'
alias gd='git diff'
alias gs='git status'

# ls aliases
alias la='ls -A'
alias ll='ls -l'
alias lla='ls -Al'

# cd aliases
alias gh='cd ~'
alias gm='cd /run/media'
alias gr='cd /'

# color aliases
alias grep='grep --color=auto'
alias ls='ls --color=auto'

# wlr-randr aliases
alias wlr-dp1='wlr-randr --output DP-1'
alias wlr-edp1='wlr-randr --output eDP-1'
alias wlr-hdmia1='wlr-randr --output HDMI-A-1'

# sudoers aliases
alias sudodiff='SUDO_EDITOR=vimdiff sudoedit'

# misc aliases
alias asus-bat='sudo bat-asus-battery'
