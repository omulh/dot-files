# git aliases
alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gd='git diff'
alias gl='git log'
alias gs='git status'

# ls aliases
alias la='ls -A'
alias ll='ls -l'
alias lla='ls -Al'

# cd aliases
alias gh='cd ~'
alias gm='cd /run/media'
alias gr='cd /'

# color aliases
alias grep='grep --color=auto'
alias ls='ls --color=auto'

# sudoers aliases
alias sudodiff='SUDO_EDITOR=vimdiff sudoedit'

# misc aliases
alias asus-bat='sudo bat-asus-battery'
