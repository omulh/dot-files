# git aliases
for al in $(git --list-cmds=alias); do
    alias g$al="git $al"
done

# list existing aliases
alias gla='git config -l | grep alias | cut -c 7- | sed "s/=/ ->\t/"'
alias bla=$'grep ^alias ~/.bash_aliases | grep -v \'^alias bla\' | cut -c 7- | sed "s/=\'/ ->\t/; s/\'$//"'

# ls aliases
alias la='ls -A'
alias ll='ls -l'
alias lla='ls -Al'

# cd aliases
alias gh='cd ~'
alias gm='cd /run/media'

# color aliases
alias grep='grep --color=auto'
alias ls='ls --color=auto'

# sudoers aliases
alias sudodiff='SUDO_EDITOR=vimdiff sudoedit'

# misc aliases
alias asus-bat='sudo bat-asus-battery'
alias xo='xdg-open-helper'
