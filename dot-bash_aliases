# git aliases
alias gad='git add'
alias gbr='git branch'
alias gcm='git commit'
alias gdf='git diff'
alias gft='git fetch'
alias glg='git log'
alias gmg='git merge'
alias gpu='git push'
alias gpl='git pull'
alias gsh='git show'
alias gst='git status'
alias gsw='git switch'
alias grb='git rebase'
alias grem='git remote'
alias gres='git restore'
alias grst='git reset'
alias grm='git rm'
alias gtr='git log --graph --all --oneline'

# ls aliases
alias la='ls -A'
alias ll='ls -l'
alias lla='ls -Al'

# cd aliases
alias gh='cd ~'
alias gm='cd /run/media'
alias gr='cd /'

# color aliases
alias grep='grep --color=auto'
alias ls='ls --color=auto'

# sudoers aliases
alias sudodiff='SUDO_EDITOR=vimdiff sudoedit'

# misc aliases
alias asus-bat='sudo bat-asus-battery'
alias xo='xdg-open-helper'
